<div class="users-card col-lg-2 col-md-12">
  <%= link_to user do%>
    <div class="card">
      <%= image_tag "#{user.image}" ,class:"card-img-top" %>
      <div class="card-body">
        <p class="card-text"><%= user.nickname %></p>
        <p class="card-text"><%= user.main_field %></p>
        <p class="card-text"><%= user.main_target %></p>
        <p class="card-text"><%= user.max_size %></p>
        <p class="card-text"><%= user.comment %></p>
      </div>
    </div>
  <% end %>
</div>
